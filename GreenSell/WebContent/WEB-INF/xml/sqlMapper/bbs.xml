<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="bbs">
  
  <!-- 게시글 리스트 받아오기 -->

  <select id="bbsselectall" parameterType="String" resultType="com.greensell.bbs.beans.BbsVo">
   select * from bbs where bbsno=#{bbsno}
  </select>
  
  <select id="bbsselecttarget" parameterType="String" resultType="com.greensell.bbs.beans.BbsVo">
   select * from bbs where bbsno=#{bbsno} and title=#{title}
  </select>

  <insert id="bbsinsert" parameterType="com.greensell.bbs.beans.BbsVo">
   insert into bbs values(no_bbs_seq.nextval,#{title},#{content},#{email},sysdate,1,1)
  </insert>
  

  <update id="bbsupdate" parameterType="String">
   
  </update>
  

  <delete id="bbsdelete" parameterType="int">
  
  </delete>
  
</mapper>
